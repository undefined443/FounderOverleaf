%%
%% ctex-fontset-founder-local.sty
%% Local Founder (FangZheng) font configuration for ctex
%% Designed for projects with fonts in a local directory
%%
\ProvidesExplPackage{ctex-fontset-founder-local}
  {2025/01/17} {1.0} {Local Founder font configuration}

\RequirePackage{fontspec}

% Configure Founder fonts from local directory
\setCJKmainfont[
  Path = fonts/Founder/,
  Extension = .ttf,
  BoldFont = FZXiaoBiaoSong-B05,
  ItalicFont = FZKai-Z03
]{FZShuSong-Z01}

\setCJKsansfont[
  Path = fonts/Founder/,
  Extension = .ttf,
  BoldFont = FZHei-B01
]{FZXiHeiI-Z08}

\setCJKmonofont[
  Path = fonts/Founder/,
  Extension = .ttf
]{FZFangSong-Z02}

\setCJKfamilyfont{zhsong}[
  Path = fonts/Founder/,
  Extension = .ttf,
  BoldFont = FZXiaoBiaoSong-B05
]{FZShuSong-Z01}

\setCJKfamilyfont{zhhei}[
  Path = fonts/Founder/,
  Extension = .ttf
]{FZHei-B01}

\setCJKfamilyfont{zhkai}[
  Path = fonts/Founder/,
  Extension = .ttf
]{FZKai-Z03}

\setCJKfamilyfont{zhfs}[
  Path = fonts/Founder/,
  Extension = .ttf
]{FZFangSong-Z02}

\setCJKfamilyfont{zhli}[
  Path = fonts/Founder/,
  Extension = .ttf
]{FZLiShu-S01}

\setCJKfamilyfont{zhyou}[
  Path = fonts/Founder/,
  Extension = .ttf,
  BoldFont = FZZhunYuan-M02
]{FZXiYuan-M01}

% Define font switching commands
\NewDocumentCommand{\songti}{}{\CJKfamily{zhsong}}
\NewDocumentCommand{\heiti}{}{\CJKfamily{zhhei}}
\NewDocumentCommand{\fangsong}{}{\CJKfamily{zhfs}}
\NewDocumentCommand{\kaishu}{}{\CJKfamily{zhkai}}
\NewDocumentCommand{\lishu}{}{\CJKfamily{zhli}}
\NewDocumentCommand{\youyuan}{}{\CJKfamily{zhyou}}

% IMPORTANT: Load hyperref LAST - it patches other packages' commands
\RequirePackage{hyperref}

\endinput
